SELECT SUM(AUMENTO_DE_QUADRO),SUM(SUBSTITUICAO),SUM(TERCEIRIZADO)
FROM (
SELECT (CASE WHEN TIPO_REQ='Aumento de Quadro' THEN TOTAL ELSE 0 END)AUMENTO_DE_QUADRO,
       (CASE WHEN TIPO_REQ='Substituição Efetiva' THEN TOTAL ELSE 0 END)SUBSTITUICAO,
       (CASE WHEN TIPO_REQ='Substituição ou Aumento Temporário' THEN TOTAL ELSE 0 END)TERCEIRIZADO
FROM (
SELECT TIPO_REQ,COUNT (DISTINCT IDREQ)TOTAL FROM RM.VW_REQ_ANDAMENTO GROUP BY TIPO_REQ
)
)
